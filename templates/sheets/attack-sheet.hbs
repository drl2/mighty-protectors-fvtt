<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />

        <div class="header-details">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'MP.Name'}}" />
            </h1>
            <div class="item-subtitle">
                <h4 class="item-type">
                    {{itemType}}
                </h4>
            </div>
        </div>
    </header>

    <section class="sheet-body">
        <div class="attack-grid">

            <div></div>
            <div>{{localize 'MP.ToHit'}}</div>
            <div></div>
            <div></div>
            <div>{{localize 'MP.Damage'}}</div>
            <div></div>
            <div></div>
            <div></div>



            <div>
                {{localize 'MP.Attribute'}}:
            </div>
            <div>
                <select name="system.attribute">
                    {{#select system.attribute}}
                    {{#each config.AttributeTypes as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </div>
            <div></div>
            <div>
                {{localize 'MP.Formula'}}:
            </div>
            <div>
                <input name="system.dmgroll" type="text" value="{{system.dmgroll}}" />
            </div>
            <div></div>
            <div>
                {{localize 'MP.Type'}}:
            </div>
            <div>
                <select name="system.dmgtype">
                    {{#select system.dmgtype}}
                    {{#each config.DamageTypes as |name type|}}
                    <option value="{{name}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </div>



            <div>
                {{#if system.tohit}}{{localize 'MP.Target'}}:{{/if}}
            </div>
            <div>
                {{#if system.tohit}}{{system.tohit}}-{{/if}}
            </div>
            <div></div>
            <div></div>
            <div>
                <label class="checkbox" title="{{ localize 'MP.KnockbackQ'}}">
                    <input type="checkbox" name="system.knockback" {{checked system.knockback}}>
                    {{ localize 'MP.KnockbackQ'}}
                </label>
            </div>
            <div></div>
            <div>{{localize 'MP.Subtype'}}:</div>
            <div><input name="system.dmgsubtype" type="text" value="{{system.dmgsubtype}}" /></div>

        </div>

        <br />

        <div class="attack-cost-grid">
            <div> {{localize 'MP.PowerCost'}}:</div>
            <div><input name="system.powercost" type="number" value="{{system.powercost}}" /></div>
            <div></div>
            <div>
                <label class="checkbox" title="{{ localize 'MP.UseChargesFrom'}}">
                    <input type="checkbox" name="system.usecharges" {{checked system.usecharges}}>
                    {{ localize 'MP.UseChargesFrom'}}:
                </label>
            </div>
            <div>
                <select name="system.chargesource">
                    {{#select system.chargesource}}
                    {{#each chargesources as |item id|}}
                    <option value="{{item.id}}">{{item.name}}</option>
                    {{/each}}
                    {{/select}}
                </select>

            </div>
        </div>

        <br />

        {{#if isowned}}
        {{localize 'MP.ToHitBonuses'}}
        <div class="bonus-side-by-side">

            <div>

                <div class="bonus-list">
                    <div class="bonus-grid">
                        <div class="item-name item-header header-text background-col">{{localize 'MP.Applied'}}</div>
                        <div class="item-name item-header header-text background-col">{{localize 'ITEM.TypeAbility'}}
                        </div>
                        <div class="item-name item-header header-text background-col">{{localize 'MP.Bonus'}}</div>

                        {{#each appliedabilities as |item id|}}
                        <h4 class="item-name background-col rollable remove-bonus" data-itemid="{{item.id}}">
                            {{localize 'MP.Remove'}}
                        </h4>
                        <h4 class="item-name background-col">{{item.name}}</h4>
                        <h4 class="item-name background-col">{{item.bonus}}</h4>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div>
                <div class="bonus-list">
                    <div class="bonus-grid">
                        <div class="item-name item-header header-text background-col">{{localize 'MP.Available'}}</div>
                        <div class="item-name item-header header-text background-col">{{localize 'ITEM.TypeAbility'}}
                        </div>
                        <div class="item-name item-header header-text background-col">{{localize 'MP.Bonus'}}</div>

                        {{#each availabilities as |item id|}}
                        <h4 class="item-name background-col rollable apply-bonus" data-itemid="{{item.id}}">
                            {{localize 'MP.Apply'}}
                        </h4>
                        <h4 class="item-name background-col">{{item.name}}</h4>
                        <h4 class="item-name background-col">{{item.bonus}}</h4>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/if}}


    </section>
</form>